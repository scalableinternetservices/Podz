<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field invisible" >
    <%= form.label :item_id, class: 'field_label' %>
    <%= form.collection_select :item_id, Item.order(:title),:id,:title, include_blank: false %>
  </div>

  <h3 class="subtitle">Write a new review</h3>

  <div class="field">
    <%= form.label :title, class: 'field_label' %>
    <%= form.text_field :title, class: 'text_field name' %>
  </div>

  <div class="field">
    <%= form.label :body, class: 'field_label' %>
    <%= form.text_area :body, class: 'text_field' %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.select :rating, options_for_select(1..5),include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :anonymous %>
    <%= form.check_box :anonymous %>
  </div>

  <div class="actions">
    <%= form.submit class: 'submit_button' %>
  </div>
<% end %>
